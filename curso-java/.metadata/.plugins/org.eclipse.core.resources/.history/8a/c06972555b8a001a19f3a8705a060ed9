package fundamentos;

public class NotacaoPonto {
	
	
	public static void main(String[] args) {
		
		
		
		String s = "Edimar, X";
		s = s.replace ("X", "Bom dia" );
		s = s.toUpperCase();
		s = s.concat("!!!");
		
		System.out.println(s);
		
		
		System.out.println("Edimar".toUpperCase());
		
	    String x = "Edimar".toUpperCase();
	    
	    System.out.println(x);
	    
	    String y =  "Bom dia X".replace("X", "Edimar");
		
		
		
	}
	
	
	

}
